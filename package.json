{
  "name": "pantrynode",
  "version": "2.0.0",
  "description": "pantry node monorepo",
  "main": "index.js",
  "scripts": {
    "start": "lerna run start --parallel",
    "test": "lerna run test --stream",
    "build": "lerna run build --stream",
    "clean": "lerna clean && rm -rf node_modules",
    "preinstall": "npm install -g lerna && npx lerna bootstrap",
    "precommit": "npx lint-staged",
    "lint": "eslint packages/**/*.{js,ts,jsx,tsx}",
    "format": "prettier --write 'packages/**/*.{js,ts,jsx,tsx}'",
    "deepinstall": "npm run preinstall && lerna exec npm install"
  },
  "keywords": [
    "monorepo"
  ],
  "author": "shubham latkar",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "lerna": "^6.5.1",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5"
  }
}
